  <ItemGroup>
    <Compile Remove="CompositeSpecimenBuilderTest.cs" />
    <Compile Remove="DefaultSpecimenContainerTest.cs" />
    <Compile Remove="DelegatingSpecimenBuilder.cs" />
    <Compile Remove="DelegatingSpecimenContainer.cs" />
    <Compile Remove="InstanceGeneratorTest.cs" />
    <Compile Remove="ModestConstructorInvokerTest.cs" />
    <Compile Remove="ParameterRequestTranslatorTest.cs" />
