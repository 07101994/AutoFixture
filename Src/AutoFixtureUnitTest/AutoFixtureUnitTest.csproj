<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\CommonProperties.props" />
  <Import Project="..\CommonTestProperties.props" />

  <PropertyGroup>
    <TargetFrameworks>net452;netcoreapp1.1</TargetFrameworks>
    <AssemblyTitle>AutoFixtureUnitTest</AssemblyTitle>
    <AssemblyName>Ploeh.AutoFixtureUnitTest</AssemblyName>
    <RootNamespace>Ploeh.AutoFixtureUnitTest</RootNamespace>
